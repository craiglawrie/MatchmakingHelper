@model List<MatchmakingHelper.Models.Student>
@{
    ViewBag.Title = "Index";
}


<div>
    <form method="post" action="@Url.Action("Index","Students")">
        <input type="text" name="studentName" placeholder="Enter student name..." />
        <button>Add Student</button>
    </form>
</div>

<h2>Students in the Database</h2>
<table>
    <tr>
        <th>Student Name</th>
        <th>Student Email</th>
        <th>Link To Preferences</th>
    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Name</td>
            <td></td>
            <td><a href="@Url.Action("Preferences", "Students", new { id = @student.Id })" target="_blank">@Url.Action("Preferences", "Students", new { id = @student.Id })</a></td>
        </tr>
    }
</table>
